@using PagedList;
@using PagedList.Mvc;
@model IPagedList<QLHD.Models.HOPDONG_CHIPHI>
@{
    ViewBag.Title = "Thống kê thanh toán HĐ chi phí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thống kê</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách HĐ chi phí</h2>                   
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-bordered table-striped table-hover">
                        <tr>
                            <th>STT</th>
                            <th>Số HĐ</th>
                            <th>Loại HĐ</th>
                            <th>Tên bên thuê</th>
                            <th>Tên bên cho thuê</th>
                            <th>Ngày hợp đồng</th>
                            <th>Từ ngày</th>
                            <th>Đến ngày</th>
                            <th>Số chu kỳ TT</th>
                            <th>Số lần thanh toán</th>
                            <th>Tổng số tiền đã thanh toán</th>
                        </tr>
                         @{int row = 0;}
                        @{var hd = Model;}
                        @foreach (var item in hd)
                        {
                            <tr class="noidung">
                                <td>@(row += 1)</td>
                                <td>@item.SO_HD</td>
                                <td>@item.LOAI_HD_SUB.TEN_HD_SUB</td>
                                <td>@item.TEN_BT</td>
                                <td>@item.TEN_CT</td>
                                <td>@item.NGAY_HD</td>
                                <td>@item.NGAY_BD</td>
                                <td>@item.NGAY_KT</td>
                                <td>@item.SO_CHUKY</td>
                                <td>@item.THANHTOAN_CHIPHI.Count()</td>
                                <td>@item.THANHTOAN_CHIPHI.Sum(n=>n.SOTIEN_TT)</td>
                            </tr>
                        }
                    </table>
                    @*<h1>Tổng số tiền thanh toán: <span id="test">@Model.Sum(n=>n.THANHTOAN_CHIPHI.)</span> VNĐ</h1>*@
                </div>
            </div>
        </div>
    </div>
</div>

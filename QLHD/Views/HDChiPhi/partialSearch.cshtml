<div class="navbar-form navbar-left" role="search">
    <div class="form-group">
        @Html.DropDownList("txtloaiTimKiem", (IEnumerable<SelectListItem>)ViewBag.loaiTK, new { @class = "form-control" })
    </div>
    <div class="form-group" id="soHD">
        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "form-control", @placeholder = "Nhập thông tin cần tìm ..." })
    </div>
    <div class="form-group" id="loaiHD" style="display: none">
        @Html.DropDownList("ID_LOAIHD_SUB", (IEnumerable<SelectListItem>)ViewBag.loaiHD, new { @class = "form-control" })
    </div>
    <div class="form-group" id="namHD" style="display: none">
         @Html.DropDownList("NAM_HD_ID", (IEnumerable<SelectListItem>)ViewBag.namHD, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default" style="margin-bottom: 0px">Tìm kiếm <span class="glyphicon glyphicon-search" /></button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#txtloaiTimKiem').change(function () {
            var id = $('#txtloaiTimKiem').val();
            if (id == 1 || id == 4) {
                $('#soHD').show();
                $('#namHD').hide();
                $('#loaiHD').hide();
            }
            if (id == 2) {
                $('#soHD').hide();
                $('#namHD').show();
                $('#loaiHD').hide();
            }
            if (id == 3) {
                $('#soHD').hide();
                $('#namHD').hide();
                $('#loaiHD').show();
            }
        });
    });
</script>

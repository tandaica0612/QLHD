@model IEnumerable<QLHD.Models.THANHTOAN_CHIPHI>
@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thanh toán HĐ @*(số HĐ: @ViewBag.hopdong.SO_HD)*@</h3>
            <span style="color: red">@ViewBag.baoloi</span>
        </div>
    </div>
    <div class="clearfix"></div>
    @using (Html.BeginForm("ThanhToan", "HDChiPhi", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel" style="">
                    <div class="x_title">
                        <h2>Tạo mới thanh toán</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-6" style="display: none">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Hợp đồng ID:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="HOPDONG_CHIPHI_ID" required="required" value="@ViewBag.hdid"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số HĐ:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" required="required" value="@ViewBag.hopdong.SO_HD" readonly/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ngày thanh toán:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="date" class="form-control" name="NGAY_TT" required="required" />

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Từ ngày:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="date" class="form-control" name="TUNGAY_TT" required="required" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Đến ngày:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="date" class="form-control" name="DENNGAY_TT" required="required" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số tiền thanh toán:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="number" id="sotien_tt" name="SOTIEN_TT" class="auto form-control">
                                    <input type="text" id="sotien" class="auto form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số ủy nhiệm chi:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="SOUYNHIEMCHI_TT" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Chủ tài khoản:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="CHUTK_TT" value="@ViewBag.hopdong.DAIDIEN_BT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số tài khoản:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="SOTK_TT" value="@ViewBag.hopdong.TAIKHOAN_BT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ngân hàng:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="NGANHANG_TT" value="@ViewBag.hopdong.NGANHANG_BT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ghi chú:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="GHICHU_TT" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Tình trạng máy:</label>
                                </div>
                                <div class="col-md-5">

                                    @if (@ViewBag.tinhtrang != "")
                                    {
@*<p class="label label-success">@item.TINHTRANG_SD_CHIPHI.First().TINHTRANG_SD</p>*@
                                        if (@ViewBag.tinhtrang == "1")
                                        {
                                        <p class="label label-success">Hoạt động bình thường</p>
                                        }
                                        else
                                        {
                                            if (@ViewBag.tinhtrang == "2")
                                            {
                                        <p class="label label-danger">Thiết bị hỏng</p>
                                            }
                                            else
                                            {
                                        <p class="label label-default">Cần kiểm tra lại</p>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <p class="label label-warning">Chưa xác nhận</p>
                                    }
                                    <p id="tinhtrang" hidden>@ViewBag.tinhtrang</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="text-align: center;">
                <input type="submit" class="btn btn-success btn-lg" value="Thanh toán" id="submit" onclick="check_tinhtrang();"/>
                @*<input type="button" class="btn btn-default btn-lg" value="Hủy" />*@
                <a href="@Url.Action("danhsachthanhtoan", "HDChiPhi")" class="btn btn-default btn-lg">Hủy
                </a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Lịch sử thanh toán của HĐ</h2>
                    <h4>@ViewBag.sohd</h4>
                    <div class="nav navbar-right">
                        <a href="@Url.Action("Export_TT", "HDChiPhi", new { @HDid = @ViewBag.hdid })" class="btn btn-info btn-lg">In danh sách
                    <span class="glyphicon glyphicon-download-alt" style="color: #020202" />
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped table-hover">
                                    <tr>
                                        <th>Số ủy nhiệm chi</th>
                                        <th>Ngày thanh toán</th>
                                        <th>Số tiền thanh toán</th>
                                        <th>Chủ tài khoản</th>
                                        <th>Số tài khoản</th>
                                        <th></th>
                                    </tr>
                                    @*@Html.Action("lichsuthanhtoan", "HDChiPhi", new { @HDid = @Model.HOPDONG_CHIPHI_ID })*@

                                    @Html.Action("lichsuTT1", "HDChiPhi", new { @HDid = @ViewBag.hopdong.HOPDONG_CHIPHI_ID })
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/numeric/jquery.js")
@Scripts.Render("~/Scripts/numeric/jquery.number.js")
<script type="text/javascript">
    function check_tinhtrang() {
        var tinhtrang = $('#tinhtrang').val();
        if (tinhtrang == null) {
            var r = confirm("Thiết bị hợp đồng chưa xác nhận tìng trạng sử dụng, có tiếp tục thanh toán hợp đồng?");
            if (r == true) {
                $('#submit').submit();
            }
            else {
                return false;
            }
        }
    }
    $(function () {
        // Set up the number formatting.
        $('#sotien_tt').hide();
        $('#sotien').number(true, 0);
        $('#submit').on('click', function () {            
            var sotien = $('#sotien').val();
            $("input[name='SOTIEN_TT']").val(sotien);            
        });
    });

</script>

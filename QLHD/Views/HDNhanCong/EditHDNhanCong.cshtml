            var thang = $('#thang').val();
            var tong = $('#tong_gt').val();
            $("input[name='THANG_GT']").val(thang_gt);
            $("input[name='TONG_GT']").val(tong);
            $("input[name='VAT']").val(vat);
            $("input[name='THANG']").val(thang);
            var thulao = $('#thulao').val();
            var sotien_baohiem = $('#sotien_baohiem').val();
            $("input[name='THULAO']").val(thulao);
            $("input[name='SOTIEN_BAOHIEM']").val(sotien_baohiem);

            $("input[name='LUONG_KYTHUAT']").val($('#luong_kythuat').val());
            $("input[name='LUONG_TAISAN']").val($('#luong_taisan').val());
            $("input[name='LUONG_MPD']").val($('#luong_mpd').val());
            $("input[name='LUONG_BAOVE']").val($('#luong_baove').val());
        });
    });
    function sum_tong() {
        //alert("tesst");
        var tong1 = 0;
        var thang1 = $('#thang').val();
        var vat1 = $('#vat').val();
        if (isNaN(thang1) || thang1 == "") {
            tong1 = parseFloat(vat1);
        }
        else {
            if (isNaN(vat1) || vat1 == "") {
                tong1 = parseFloat(thang1);
            }
            else tong1 = parseFloat(thang1) + parseFloat(vat1);
        }
        $("input[name='thang_gt']").val(tong1);
        //alert(tong1);
    }
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#THUE_BT').change(function () {
            var id = $('#THUE_BT').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("getBT", "HDNhanCong")',
                data: { id: id },
                success: function (data) {
                    $('#TEN_BT').val(data.ten);
                    $('#DIACHI_BT').val(data.diachi);
                    $('#DIENTHOAI_BT').val(data.dienthoai);
                    $('#FAX_BT').val(data.fax);
                    $('#MSTHUE_BT').val(data.msthue);
                    $('#TAIKHOAN_BT').val(data.taikhoan);
                    $('#NGANHANG_BT').val(data.nganhang);
                    $('#DAIDIEN_BT').val(data.daidien);
                    $('#CHUCVU_BT').val(data.chucvu);
                }
            });
        });
        $('#SO_CHUKY').change(function () {
            var thang = $('#thang_gt').val();
            var sochuky = $('#SO_CHUKY').val();
            var tong = thang * sochuky;
            $('#tong_gt').val(tong);
        });
        $('INPUT[type="file"]').change(function () {
            var ext = this.value.match(/\.(.+)$/)[1];
            switch (ext) {
                case 'doc':
                case 'docx':
                case 'pdf':
                case 'PDF':
                    $('#uploadButton').attr('disabled', false);
                    break;
                default:
                    alert('Định dạng file không đúng, vui lòng chọn file định dạng .doc, .docx, .pdf !!!');
                    this.value = '';
            }
        });
        $('#vtt_khonghotro').val(@Model.VTT_KHONGHOTRO);
    });
    
</script>

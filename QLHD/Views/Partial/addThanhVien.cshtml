@model QLHD.Models.THANHVIEN
<div class="modal fade" id="addTV" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("addThanhVien", "Partial", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Thêm thành viên mới</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Tên thành viên:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="TEN_THANHVIEN" required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Tên truy cập:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="TENTRUYCAP" required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Mật khẩu:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="password" class="form-control" name="MATKHAU" required="required" value="123456" placeholder="123456" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Hệ thống:</b>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownList("HETHONG_ID", (IEnumerable<SelectListItem>)ViewBag.HETHONG, "--Chọn--", new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Chức vụ:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="CHUCVU" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Ngày sinh:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="date" class="form-control" name="NGAYSINH" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Địa chỉ:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="DIACHI" />
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Trình độ:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="TRINHDO" />
                                </div>
                            </div>
                            </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Tôn giáo:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="TONGIAO" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Dân tộc:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="DANTOC" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Điện thoại:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="DIENTHOAI" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>EMAIL:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="EMAIL" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Số CMND:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="number" class="form-control" name="CMND" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Nơi cấp:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="NOICAP" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <b>Ngày cấp:</b>
                                </div>
                                <div class="col-md-8">
                                    <input type="date" class="form-control" name="NGAYCAP" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Tạo mới" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />

                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Trở lại</button>*@
                    @*<button type="button" class="btn btn-primary">OK</button>*@
                </div>
            }
        </div>
    </div>
</div>

@model QLHD.Models.CHUKY_TT
<button type="button" data-toggle="modal" data-target="#@ViewBag.xoa" title="Xóa chu kỳ" class="btn btn-danger btn-sm">
                                                        <i class="fa fa-remove" style="font-size: 15px"></i>
                                                    </button>
<div class="modal fade" id="@ViewBag.xoa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("xacnhanxoaChuKy", "Partial", new { idCK = @Model.CHUKY_ID }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Xác nhận xóa chu kỳ</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        Bạn có chắc muốn xóa chu kỳ "<span style="color:red">@Model.CHUKY</span>" không?  
                        <b style="color:red">@ViewBag.canhbao</b>           
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Xóa" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
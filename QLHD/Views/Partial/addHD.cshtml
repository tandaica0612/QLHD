@model QLHD.Models.LOAI_HD_SUB
<div class="modal fade" id="addHD" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("addHD", "Partial", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Thêm hợp đồng mới</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tên hợp đồng:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="TEN_HD_SUB" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Loại hợp đồng:</b>
                            </div>
                            <div class="col-md-8">

                                @Html.DropDownList("IDLOAI_HD", (IEnumerable<SelectListItem>)ViewBag.MALOAIHD, new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Tạo mới" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                    
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Trở lại</button>*@
                    @*<button type="button" class="btn btn-primary">OK</button>*@
                </div>
            }
        </div>
    </div>
</div>

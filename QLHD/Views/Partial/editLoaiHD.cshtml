@model QLHD.Models.LOAI_HD_SUB
<button type="button" data-toggle="modal" data-target="#@ViewBag.edit" title="Hiện chi tiết thanh toán" class="btn btn-warning btn-sm">
                                                        <i class="fa fa-pencil" style="font-size: 15px"></i>
                                                    </button>
<div class="modal fade" id="@ViewBag.edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("editHTTTPost", "Partial", new { idHD = @Model.ID_LOAIHD_SUB }, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Sửa loại hợp đồng</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tên loại HĐ:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="TEN_HD_SUB" value="@Model.TEN_HD_SUB" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Nhóm HĐ:</b>
                            </div>
                            <div class="col-md-8">
                                <select name="LOAIHD" class="form-control" id="@Model.ID_LOAIHD_SUB">
                                    <option value="1">Hợp đồng chi phí</option>
                                    <option value="2">Hợp đồng doanh thu</option>
                                    <option value="3">Hợp đồng nhân công</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Ghi chú:</b>
                            </div>
                            <div class="col-md-8">
                                <textarea class="form-control" name="GHICHU" rows="4" placeholder="Ghi chú">@Model.GHICHU</textarea>
                            </div>
                        </div>             
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#@Model.ID_LOAIHD_SUB').val(@Model.LOAIHD);
    });
</script>
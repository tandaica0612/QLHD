<button type="button" data-toggle="modal" data-target="#@ViewBag.delete" title="Xóa" class="btn btn-danger btn-sm">
    <i class="glyphicon glyphicon-trash" style="font-size: 15px"></i>
</button>
<div class="modal fade" id="@ViewBag.delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("XacNhanXoaHDCNTT", "HDCNTT", new { HDCNTT_ID = @Model.HOPDONG_DT_CNTT_ID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Xác nhận xóa</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        Bạn có chắc muốn xóa hợp đồng này không?
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Xóa" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Trờ về" />
                </div>
            }
        </div>
    </div>
</div>

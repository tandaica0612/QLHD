
@{
    ViewBag.Title = "Create_TienTrinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Hợp đồng CNTT</h3>
            <span style="color:red">@ViewBag.baoloi</span>
        </div>
    </div>
    <div class="clearfix"></div>

</div>
@using (Html.BeginForm("Create_TienTrinh", "HDCNTT", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thêm mới tiến trình</h2>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="x_content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Tên tiến trình:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" name="TEN_TIENTRINH" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Người phụ trách:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" name="NGUOIPHUTRACH" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Tiến độ:</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("TIENDO_ID", (IEnumerable<SelectListItem>)ViewBag.MATIENDO, "--Chọn--", new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Ngày giao:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control" name="NGAYGIAO" required="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Deadline:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control" name="DEADLINE" required="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">File đính kèm:</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" class="form-control" id="upload" name="upload" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <label style="float: right">Loại tiến trình:</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("IsVTT", (IEnumerable<SelectListItem>)ViewBag.MALOAITIENTRINH, "--Chọn--", new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="text-align: center;">
            <input type="submit" class="btn btn-success btn-md" value="Tạo mới" id="submit" />
            <a href="@Url.Action("Index", "HDDoanhThu")" class="btn btn-default btn-md">
                Hủy
            </a>
        </div>
    </div>

}

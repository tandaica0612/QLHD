
<div class="modal fade" id="@ViewBag.delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("XacNhanXoaTDDA", "HDCNTT", new { idDA = Model.DUAN_ID, idTD = @Model.TIENDO_DA_ID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Xác nhận xóa</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        Bạn có chắc muốn xóa tiên độ này không?
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Xóa" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Trờ về" />
                </div>
            }
        </div>
    </div>
</div>


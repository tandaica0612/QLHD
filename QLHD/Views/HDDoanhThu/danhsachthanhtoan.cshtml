@using PagedList;
@using PagedList.Mvc;
@model IPagedList<QLHD.Models.HOPDONG_DOANHTHU>

@{
    ViewBag.Title = "HĐ Chi Phí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thanh toán hợp đồng doanh thu</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="nav navbar-left">
                @using (Html.BeginForm("KetQuaTimKiem", "HDDoanhThu", FormMethod.Post))
                {
                    @Html.Action("partialSearch","HDChiPhi")
                }
            </div>
            
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách HĐ doanh thu</h2>
                    <div class="clearfix"></div>
                </div>
                
                <div class="x_content">
                    <h4>@ViewBag.thongbao</h4>
                    <table class="table table-bordered table-striped table-hover">
                        <tr>
                            <th style="width: 30px">STT</th>
                            <th>Số HĐ</th>
                            <th>Loại HĐ</th>
                            <th>Ngày lập HĐ</th>
                            <th>Đại diện bên thuê</th>
                            <th>Đại diện bên cho thuê</th>
                            <th>Tổng giá trị HĐ</th>
                            <th>Chu kỳ thanh toán</th>
                            <th>Hình thức thanh toán</th>                            
                        </tr>
                        @{int row = 0;}
                        @foreach (var item in Model)
                        {
                            <tr class="noidunghd">
                                <td>@(row += 1)</td>
                                <td>
                                    <a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })" >
                                        @item.SO_HD
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.LOAI_HD_SUB.TEN_HD_SUB </a>
                                </td>

                                <td>
                                    <a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">
                                        
                                        @if (item.NGAY_HD.HasValue){
                                            @item.NGAY_HD.Value.ToString("dd/MM/yyyy")
                                        }
                                    </a>
                               </td>
                                <td>
                                    <a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.DAIDIEN_BT</a>
                                </td>

                                <td><a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.TEN_CT</a></td>
                                <td><a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.TONG_GT</a></td>
                                <td><a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.CHUKY_TT.CHUKY</a></td>
                                <td><a href="@Url.Action("ThanhToan", new { @HDid = item.HOPDONG_DOANHTHU_ID })">@item.HTTT.TEN_HTTT</a></td>
                                <td>
                                    
                                </td>
                                
                                
                            </tr>
                        }
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }
            </style>
        </div>
    </div>
</div>

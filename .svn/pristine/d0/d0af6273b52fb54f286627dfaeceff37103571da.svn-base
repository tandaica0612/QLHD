@Scripts.Render("~/Scripts/numeric/jquery.number.js")
<script type="text/javascript">
    $(function () {
        // Set up the number formatting.
        $('#thang').number(true, 0);
        $('#vat').number(true, 0);
        $('#thang_gt').number(true, 0);
        $('#tong_gt').number(true, 0);

    });
</script>


<div class="modal fade" id="huythanhly" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("HuyThanhLy", "HDChiPhi", new { HDid = @Model.HOPDONG_CHIPHI_ID }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Xác nhận hủy thanh lý</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        Xác nhận hủy thanh lý cho hợp đồng này? <span style="color:red">(Số HĐ: @Model.SO_HD)</span>                         
                              
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Hủy thanh lý" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Đóng" />
                </div>
            }
        </div>
    </div>
</div>
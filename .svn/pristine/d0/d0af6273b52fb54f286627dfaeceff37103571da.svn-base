@model QLHD.Models.HOPDONG_CHIPHI

@{
    ViewBag.Title = "Chi tiết hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Hợp đồng chi phí</h3>
        </div>
        <div class="nav navbar-right">
            @if(@Model.FILE_ID != null)
            {
                <a href="@Url.Action("ExportData", "HDChiPhi", new { @HDid = Model.HOPDONG_CHIPHI_ID })" class="btn btn-info btn-lg">In hợp đồng
                        <span class="glyphicon glyphicon-download-alt" style="color: white" />
                </a>
            }
            @if(@Model.TRANGTHAI == 0){
                <a href="@Url.Action("ThanhLyHD", "HDChiPhi", new {@HDid = @Model.HOPDONG_CHIPHI_ID })" class="btn btn-info btn-lg" style="float:right">Thanh lý HĐ
                    @*<span class="fa fa-dollar" />*@
                </a>
            }

            @if (@Model.TRANGTHAI == 2)
            {
                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#huythanhly">Hủy thanh lý</button>
            }
            
        </div>
    </div>

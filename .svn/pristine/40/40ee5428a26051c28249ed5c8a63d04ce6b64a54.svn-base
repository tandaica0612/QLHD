@model QLHD.Models.TINHTRANG_SD_CHIPHI

<button type="button" data-toggle="modal" data-target="#@ViewBag.edit" title="Cập nhật tình trạng sử dụng" class="btn btn-primary btn-sm">
                                                        <i class="glyphicon glyphicon-refresh" style="font-size: 15px"></i>
                                                    </button>
<div class="modal fade" id="@ViewBag.edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("editxacnhanpost", "HDChiPhi", new { mahd = @Model.HOPDONG_CHIPHI_ID }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">                   
                    <h4 class="modal-title" id="myModalLabel">Cập nhật tình trạng sử dụng</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>id hợp đồng:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="HOPDONG_CHIPHI_ID" value="@Model.HOPDONG_CHIPHI_ID" readonly>
                            </div>
                        </div>    
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tên thiết bị:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="TEN_TB" value="@Model.TEN_TB" required>
                            </div>
                        </div>    
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tình trạng sử dụng:</b>
                            </div>
                            <div class="col-md-8">
                                @*<input type="text" class="form-control" name="TINHTRANG_SD" value="@Model.TINHTRANG_SD">*@
                                <select name="TINHTRANG_SD" class="form-control" id="@Model.TINHTRANG_ID">
                                    <option value="1">Hoạt động bình thường</option>
                                    <option value="2">Hư hỏng</option>
                                    <option value="3">Cần kiểm tra lại</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Ghi chú:</b>
                            </div>
                            <div class="col-md-8">
                                <textarea class="form-control" name="GHICHU" rows="4">@Model.GHICHU</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#@Model.TINHTRANG_ID').val(@Model.TINHTRANG);
    });
</script>
@model QLHD.Models.MENU_CON

<button type="button" data-toggle="modal" data-target="#@ViewBag.idmenu" title="Chỉnh sửa menu" class="btn btn-warning btn-sm">
                                                        <i class="fa fa-pencil" style="font-size: 15px"></i>
                                                    </button>
<div class="modal fade" id="@ViewBag.idmenu" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("EditMenuConPost", "HeThong", new { idmenu = @Model.ID_MENU_CON }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Sửa menu</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tên menu:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="TEN_MENU" value="@Model.TEN_MENU" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Thuộc nhóm menu:</b>
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownList("ID_MENU_CHA", (IEnumerable<SelectListItem>)ViewBag.nhommenu,"--Chọn--", new { @class = "form-control", required = "required" })
                            </div>
                        </div>      
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Link menu:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="LINK" placeholder="vd: href=/HDChiPhi/Index" value="@Model.LINK">
                            </div>
                        </div>    
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Lưu" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
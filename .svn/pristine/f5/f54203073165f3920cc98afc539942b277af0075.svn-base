@model QLHD.Models.THANHTOAN_DOANHTHU
<button type="button" data-toggle="modal" data-target="#@ViewBag.detail" title="Hiện chi tiết thanh toán" class="btn btn-info btn-sm">
    <i class="fa fa-book" style="font-size: 15px"></i>
</button>
<div class="modal fade" id="@ViewBag.detail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Chi tiết lịch sử thanh toán</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Số hợp đồng:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.HOPDONG_DOANHTHU.SO_HD
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Ngày thanh toán:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @if (Model.NGAY_TT.HasValue)
                            {
                                @Model.NGAY_TT.Value.ToString("dd/MM/yyyy")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            <b>Từ ngày:</b>
                        </div>
                        <div class="col-md-4" style="margin-top: 8px">
                            @if (Model.TUNGAY_TT.HasValue)
                            {
                                @Model.TUNGAY_TT.Value.ToString("dd/MM/yyyy")
                            }
                        </div>
                        <div class="control-label col-md-2">
                            <b>Đến ngày:</b>
                        </div>
                        <div class="col-md-4" style="margin-top: 8px">
                            @if (Model.DENNGAY_TT.HasValue)
                            {
                                @Model.DENNGAY_TT.Value.ToString("dd/MM/yyyy")
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Số tiền thanh toán:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.SOTIEN_TT
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Số ủy nhiệm chi:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.SOUYNHIEMCHI_TT
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Chủ tài khoản:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.CHUTK_TT
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Số tài khoản:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.SOTK_TT
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Ngân hàng:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.NGANHANG_TT
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="control-label col-md-4">
                            <b>Ghi chú:</b>
                        </div>
                        <div class="col-md-8" style="margin-top: 8px">
                            @Model.GHICHU_TT
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">

                @Html.Action("editTT", "HDDoanhThu", new { @maTT = @Model.ID_TT })
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Đóng" />
            </div>
        </div>
    </div>
</div>
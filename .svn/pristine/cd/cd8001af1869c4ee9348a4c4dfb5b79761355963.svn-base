<script type="text/javascript">
    function sum_tong() {
        //alert("tesst");
        var tong1 = 0;
        var thang1 = $('#thang').val();
        var vat1 = $('#vat').val();
        if (isNaN(thang1) || thang1 == "") {
            tong1 = parseFloat(vat1);
        }
        else {
            if (isNaN(vat1) || vat1 == "") {
                tong1 = parseFloat(thang1);
            }
            else tong1 = parseFloat(thang1) + parseFloat(vat1);
        }
        $("input[name='thang_gt']").val(tong1);
        //alert(tong1);
    }
</script>

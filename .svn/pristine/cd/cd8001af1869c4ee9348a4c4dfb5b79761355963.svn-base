<script type="text/javascript">
    $(document).ready(function () {
        $('#THUE_BT').change(function () {
            var id = $('#THUE_BT').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("getBT", "HDNhanCong")',
                data: { id: id },
                success: function (data) {
                    $('#TEN_BT').val(data.ten);
                    $('#DIACHI_BT').val(data.diachi);
                    $('#DIENTHOAI_BT').val(data.dienthoai);
                    $('#FAX_BT').val(data.fax);
                    $('#MSTHUE_BT').val(data.msthue);
                    $('#TAIKHOAN_BT').val(data.taikhoan);
                    $('#NGANHANG_BT').val(data.nganhang);
                    $('#DAIDIEN_BT').val(data.daidien);
                    $('#CHUCVU_BT').val(data.chucvu);
                }
            });
        });
        $('#ngay_kt').change(function () {
            var bd = new Date($('#ngay_bd').val().toString('dd/MM/yyyy'));
            var kt = new Date($('#ngay_kt').val().toString('dd/MM/yyyy'));
            var sogiay = Math.abs(kt - bd);
            var sothang = Math.round(sogiay / (86400000 * 30));
            var tien = $('#thang_gt').val();
            var chuky = $('#CHUKY_ID').val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("getChuKyTT","HDNhanCong")',
                data: { chuky: chuky },
                success: function (data) {
                    var sochuky = Math.round(sothang / data.thang);
                    var tong = tien * sochuky * data.thang;
                    $('#SO_CHUKY').val(sochuky);
                    $('#tong_gt').val(tong);
                }
            });
        });
        //Hàm ajax chọn loại HĐ
        $('#ID_LOAIHD').change(function () {
            $.getJSON("/HDChiPhi/HDList/" + $("#ID_LOAIHD > option:selected").attr("value"), function (data) {
                var item = "<option>--Chọn HĐ--</option>"
                $.each(data, function (i, hdsub) {
                    item += "<option value='" + hdsub.Value + "'>" + hdsub.Text + "</option>";
                });
                $("#ID_LOAIHD_SUB").html(item);
            });
        });

    });
</script>


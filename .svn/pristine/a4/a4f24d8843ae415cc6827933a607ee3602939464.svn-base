@model QLHD.Models.DM_VANBAN
<div class="modal fade" id="addVB" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("addVB", "Partial", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Thêm VB mới</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Tên VB:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="file_name" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4">
                                <b>Ngày tạo VB:</b>
                            </div>
                            <div class="col-md-8">
                                <input type="date" class="form-control" name="ngay_tao_vb" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <label style="float: left">File VB:</label>
                            </div>
                            <div class="col-md-10">
                                <input type="file" class="form-control" id="upload" name="upload" required="required"/>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="control-label col-md-2">
                                <label style="float: left">File VB:</label>
                            </div>
                            <div class="col-md-10">
                                <span class="btn btn-success fileinput-button">
                                    <i class="fa fa-plus"></i>
                                    <input id="upload" type="file" name="files[]" data-url="Partial/Upload/" multiple>
                                    <input type="hidden" id="store_files" />
                                    <span>Thêm Files...</span>
                                </span>
                            </div>
                        </div>*@
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Tạo mới" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $('INPUT[type="file"]').change(function () {
        var ext = this.value.match(/\.(.+)$/)[1];
        switch (ext) {
            case 'doc':
            case 'docx':
            case 'PDF':
            case 'xlsx':
            case 'pdf':
                $('#uploadButton').attr('disabled', false);
                break;
            default:
                alert('Định dạng file không đúng, vui lòng chọn file định dạng .doc, .docx, .pdf !!!');
                this.value = '';
        }
    });
</script>
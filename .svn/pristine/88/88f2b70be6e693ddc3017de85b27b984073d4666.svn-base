@model QLHD.Models.THANHTOAN_CHIPHI
<button type="button" data-toggle="modal" data-target="#@ViewBag.idTT" title="Xóa" class="btn btn-danger btn-sm">
    <i class="glyphicon glyphicon-trash" style="font-size: 15px"></i>
</button>
<div class="modal fade" id="@ViewBag.idTT" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("xacnhanxoaThanhToan", "HDChiPhi", new { thanhtoanID = @Model.ID_TT }, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Xác nhận xóa</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                        Bạn có chắc muốn xóa lịch sử thanh toán không? (số ủy nhiệm chi: <span style="color: red">@Model.SOUYNHIEMCHI_TT</span>)
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Xóa" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>

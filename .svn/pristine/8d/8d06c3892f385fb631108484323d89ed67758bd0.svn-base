@using QLHD.Models;
@model List<QLHD.Models.CHUKY_TT>
@{
    ViewBag.Title = "Chu Kỳ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý Chu kỳ TT</h3>
        </div>

        @*<div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm sản phẩm">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>*@
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="nav navbar-left">
                <form class="form-horizontal">
                    
                </form>
            </div>
            <div class="nav navbar-right">
                    <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#addCK"><i class="fa fa-plus"></i>Thêm mới</button>
                </div>
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh mục chu kỳ TT </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-striped">
                        <tr>
                            <th>STT</th>
                            <th>Chu kỳ</th>
                            <th>Số tháng của chu kỳ</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                        @{int row = 0;}
                        @foreach(var item in Model){
                        <tr>
                            
                                <td>@(row+=1)</td>
                                <td>@item.CHUKY</td>
                                <td>@item.THANG</td>
                                <td>
                                    
                                    @Html.Action("EditChuKyTT", "Edit", new {@machuky = @item.CHUKY_ID })
                                </td>
                                <td>
                                    
                                    @Html.Action("xoaChuKy", "Partial", new {@idCK = @item.CHUKY_ID })

                                </td>      
                        </tr>
                        }
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("addChuKy","Partial")


@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Đổi mật khẩu</h3>
            <h2 style="color: red">@ViewBag.baoloi1</h2>
        </div>
    </div>
    <div class="clearfix"></div>
    @using (Html.BeginForm("DoiMatKhau", "HeThong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel" style="">
                    <div class="x_title">
                        <h2>Đổi mật khẩu</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-12" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Nhập mật khẩu cũ:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="password" class="form-control" name="mkcu" required="required" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Nhập mật khẩu mới:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="password" class="form-control" name="mkmoi" required="required" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Nhập lại mật khẩu mới:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="password" class="form-control" name="MATKHAU" required="required" />
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div style="text-align: center;">
                        <input type="submit" class="btn btn-success btn-lg" value="Cập nhật" />
                        <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-lg">Hủy
                        </a>
                    </div>
                </div>

            </div>

        </div>
    }
</div>

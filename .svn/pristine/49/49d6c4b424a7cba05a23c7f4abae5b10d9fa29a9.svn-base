@model QLHD.Models.THANHTOAN_CHIPHI
<button type="button" data-toggle="modal" data-target="#@ViewBag.edit" title="Chỉnh sửa lịch sử thanh toán" class="btn btn-warning btn-sm" data-dismiss="modal">
    <i class="fa fa-pencil" style="font-size: 15px"></i>
</button>
<div class="modal fade" id="@ViewBag.edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("xacnhanEditThanhToan", "HDChiPhi", new { thanhtoanID = @Model.ID_TT }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Chỉnh sửa lịch sử thanh toán</h4>
                </div>     
                <div class="modal-body">
                    <div class="form-horizontal">
                                   <div class="col-md-6" style="display:none">
                            <div class="form-group" >
                                <div class="control-label col-md-4">
                                    <label style="float: right">Hợp đồng ID:</label>
                                </div>
                                <div class="col-md-5" >
                                    <input type="text" class="form-control" name="HOPDONG_CHIPHI_ID" required="required" value="@Model.HOPDONG_CHIPHI_ID"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" >
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số HĐ:</label>
                                </div>
                                <div class="col-md-5" >
                                    <input type="text" class="form-control" required="required" value="@ViewBag.hopdong.SO_HD" readonly/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ngày thanh toán:</label>
                                </div>
                                <div class="col-md-5">
                                    
                                    @if (Model.NGAY_TT.HasValue)
                                        {
                                            <input type="datetime" class="form-control" name="NGAY_TT" required="required" value="@Model.NGAY_TT.Value.ToString("dd/MM/yyyy")"/>
                                        }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Từ ngày:</label>
                                </div>
                                <div class="col-md-5">
                                    @if (Model.TUNGAY_TT.HasValue)
                                        {
                                            <input type="datetime" class="form-control" name="TUNGAY_TT" required="required" value="@Model.TUNGAY_TT.Value.ToString("dd/MM/yyyy")"/>
                                        }
                                   
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Đến ngày:</label>
                                </div>
                                <div class="col-md-5">
                                    @if (Model.DENNGAY_TT.HasValue)
                                        {
                                            <input type="datetime" class="form-control" name="DENNGAY_TT" required="required" value="@Model.DENNGAY_TT.Value.ToString("dd/MM/yyyy")"/>
                                        }
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số tiền thanh toán:</label>
                                </div>
                                <div class="col-md-5">
                                    @*<input type="text" id ="@Model.HOPDONG_CHIPHI_ID" class="auto form-control"  />*@
                                    <input type="number" id="sotien2" name="SOTIEN_TT" class="auto form-control" value="@Model.SOTIEN_TT"/>
                                    
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số ủy nhiệm chi:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="SOUYNHIEMCHI_TT" value="@Model.SOUYNHIEMCHI_TT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Chủ tài khoản:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="CHUTK_TT" value="@Model.CHUTK_TT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Số tài khoản:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="SOTK_TT" value="@Model.SOTK_TT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ngân hàng:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="NGANHANG_TT" value="@Model.NGANHANG_TT"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 15px">
                            <div class="form-group">
                                <div class="control-label col-md-4">
                                    <label style="float: right">Ghi chú:</label>
                                </div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="GHICHU_TT" value="@Model.GHICHU_TT"/>
                                </div>
                            </div>
                            
                        </div> 
                    </div>
                    <div class="clearfix"></div>
                </div>             
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Lưu" id="submit_edit"/>
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy" />
                </div>
            }
        </div>
    </div>
</div>
